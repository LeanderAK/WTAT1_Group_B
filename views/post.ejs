            </a>
        </div>
    </div>
    <% if(post.img){ %>
        <img id="postImage" alt="Post Image" src=<%= post.img %>>
    <% } %>
        <% if(post.steps.length !== 0){ %>
            <h2 id="stepsTitle">Anleitung</h2>
            <% post.steps.forEach(step => { %>
                <div id="stepContainer">
                    <div id="stepInfo">
                        <div id="stepNumber"><%= step.number %></div>
                        <div><%= step.description %></div>
                    </div>
                </div>
        <% })} %>
</div>

